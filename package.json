{
  "name": "pbsabella.github.io",
  "version": "1.0.0",
  "description": "Personal Website",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "npm run build && vite preview",
    "check": "npm run type-check && npm run lint && npm run test && npm run test:local && npm run lighthouse",
    "lint": "eslint . && stylelint '**/*.css' && node scripts/check-css-prefix.mjs",
    "lint:eslint": "eslint .",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint:stylelint": "stylelint '**/*.css' --fix",
    "format": "prettier --write .",
    "prepare": "husky",
    "cypress:open": "cypress open",
    "cypress:e2e": "cypress run --browser chrome",
    "lighthouse": "LH_QUIET=1 start-server-and-test \"npm run preview -- --host 127.0.0.1 --port 4173\" http://localhost:4173 \"node scripts/lighthouse-routes.mjs\"",
    "lighthouse:quick": "LH_QUIET=1 LH_RUNS=1 start-server-and-test \"npm run preview -- --host 127.0.0.1 --port 4173\" http://localhost:4173 \"node scripts/lighthouse-routes.mjs\"",
    "pw:install": "playwright install chromium firefox webkit",
    "pw:test": "playwright test",
    "pw:smoke": "playwright test playwright/smoke",
    "pw:headed": "playwright test --headed",
    "test:local": "start-server-and-test dev http://localhost:5173 cypress:e2e",
    "percy:test": "vite build && start-server-and-test 'vite preview --port 5173' http://localhost:5173 'percy exec -- cypress run'",
    "percy:baseline": "PERCY_BRANCH=master percy exec -- cypress run --config baseUrl=https://pbsabella.github.io/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pbsabella/pbsabella.github.io.git"
  },
  "keywords": [
    "html",
    "css",
    "responsive",
    "react"
  ],
  "author": "Paula Bianca Abella",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pbsabella/pbsabella.github.io/issues"
  },
  "homepage": "https://github.com/pbsabella/pbsabella.github.io#readme",
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@axe-core/playwright": "^4.10.2",
    "@playwright/test": "^1.56.1",
    "@percy/cli": "^1.31.8",
    "@percy/cypress": "^3.1.7",
    "@testing-library/cypress": "^10.1.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitejs/plugin-react": "^5.1.3",
    "cypress": "^15.10.0",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-cypress": "^5.2.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "jsdom": "^28.0.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "start-server-and-test": "^2.1.3",
    "stylelint": "^17.1.1",
    "stylelint-config-standard": "^40.0.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "lucide-react": "^0.468.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-router-dom": "^7.13.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.css": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{json,md,html}": [
      "prettier --write"
    ]
  }
}
